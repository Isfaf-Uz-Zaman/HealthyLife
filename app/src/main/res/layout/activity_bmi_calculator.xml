<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:orientation="vertical"
    tools:context=".BmiCalculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="294dp"
            android:layout_height="42dp"
            android:text="LETS  CHECK YOUR BMI!!"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="132dp" />

        <EditText
            android:id="@+id/editTextTextPersonWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Weight in kg"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="210dp" />

        <EditText
            android:id="@+id/editTextTextPersonHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Height in CM"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="281dp" />

        <Button
            android:id="@+id/checkBmiID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="380dp" />
        <TextView
            android:id="@+id/yourBmiID"
            android:layout_width="294dp"
            android:layout_height="42dp"
            android:textAlignment="center"
            android:text="YOUR BMI!!"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="58dp"

            tools:layout_editor_absoluteY="132dp" />
        <TextView
            android:id="@+id/suggestUserChart"
            android:layout_width="287dp"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:text="Tips for you."
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="325dp" />

        <Button
            android:id="@+id/checkDietChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Diet plan to lose weight"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="483dp" />


    </LinearLayout>




</LinearLayout>